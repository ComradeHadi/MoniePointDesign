<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AllFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ShipmentFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">







            <TextView
                android:id="@+id/shipment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shipment_text"
                android:textSize="18sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/black" />



            <RelativeLayout
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shipment_text"
                tools:ignore="MissingConstraints,NotSibling"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/item_track_bg_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/circular_light_grey_bg"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/loading"
                                android:contentDescription="@string/sender_icon_img"
                                android:tint="@color/green"
                                tools:ignore="UseAppTint"
                                android:padding="5dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/in_progress"
                                android:textSize="18sp"
                                android:layout_marginEnd="5dp"
                                android:padding="3dp"
                                android:textColor="@color/green" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/arriving_today"
                            android:textSize="18sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_notice"
                            android:textSize="14sp"
                            android:layout_marginEnd="5dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="40dp"
                            android:paddingStart="0dp"
                            android:textColor="@color/light_grey" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/package_icon"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/charge"
                                android:textSize="14sp"
                                android:layout_marginEnd="5dp"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="5dp"
                                android:layout_height="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/dot_grey"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sept_20_2024"
                                android:textSize="16sp"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </LinearLayout>




                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/box_grey"
                        android:contentDescription="@string/package_icon"
                        android:layout_weight="1"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>






            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress"
                tools:ignore="MissingConstraints,NotSibling"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/item_track_bg_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/circular_light_grey_bg"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_shipment"
                                android:contentDescription="@string/sender_icon_img"
                                android:tint="@color/orange"
                                tools:ignore="UseAppTint"
                                android:padding="5dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pending"
                                android:textSize="18sp"
                                android:layout_marginEnd="5dp"
                                android:padding="3dp"
                                android:textColor="@color/orange" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/arriving_today"
                            android:textSize="18sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_notice"
                            android:textSize="14sp"
                            android:layout_marginEnd="5dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="40dp"
                            android:paddingStart="0dp"
                            android:textColor="@color/light_grey" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/package_icon"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/charge"
                                android:textSize="14sp"
                                android:layout_marginEnd="5dp"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="5dp"
                                android:layout_height="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/dot_grey"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sept_20_2024"
                                android:textSize="16sp"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </LinearLayout>




                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/box_grey"
                        android:contentDescription="@string/package_icon"
                        android:layout_weight="1"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>






            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pending"
                tools:ignore="MissingConstraints,NotSibling"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/item_track_bg_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ship"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/circular_light_grey_bg"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/loading_timer"
                                android:contentDescription="@string/sender_icon_img"
                                android:tint="@color/blue"
                                tools:ignore="UseAppTint"
                                android:padding="5dp" />
                            <TextView
                                android:id="@+id/status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/loading"
                                android:textSize="18sp"
                                android:layout_marginEnd="5dp"
                                android:padding="3dp"
                                android:textColor="@color/blue" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/shipment_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/arriving_today"
                            android:textSize="18sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/shipment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_notice"
                            android:textSize="14sp"
                            android:layout_marginEnd="5dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="40dp"
                            android:paddingStart="0dp"
                            android:textColor="@color/light_grey" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/package_icon"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/charge"
                                android:textSize="14sp"
                                android:layout_marginEnd="5dp"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="5dp"
                                android:layout_height="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/dot_grey"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sept_20_2024"
                                android:textSize="16sp"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </LinearLayout>




                    <ImageView
                        android:id="@+id/package_icon"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/box_grey"
                        android:contentDescription="@string/package_icon"
                        android:layout_weight="1"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>






            </RelativeLayout>


        </RelativeLayout>

    </FrameLayout>
</ScrollView>
